{
  "name": "hackradar-eval-system",
  "version": "1.0.0",
  "description": "Standalone evaluation system for HackRadar hackathon submissions",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node src/cli/main.js",
    "test": "node src/cli/test.js",
    "test:unit": "echo 'Running unit tests...' && node src/tests/unit/run-all.js",
    "test:integration": "echo 'Running integration tests...' && node src/tests/integration/run-all.js",
    "simulate": "node src/cli/simulate.js",
    "dev": "node --watch src/cli/main.js"
  },
  "dependencies": {
    "mongodb": "^6.19.0",
    "dotenv": "^17.2.2",
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "inquirer": "^12.1.0",
    "axios": "^1.11.0",
    "pdf-parse": "^1.1.1",
    "sharp": "^0.33.5",
    "cheerio": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  },
  "keywords": ["hackathon", "evaluation", "ai", "scoring", "cli"],
  "author": "HackRadar Team",
  "license": "MIT"
}